<?xml version="1.0"?>
<!--
/**
 * SealMetrics Tracking Module for Magento 2
 * Success Page Layout - Fires purchase event
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="SealMetrics\Tracking\Block\Success"
                   name="sealmetrics.tracking.success"
                   template="SealMetrics_Tracking::tracking/success.phtml"
                   after="sealmetrics.tracking.init"/>
        </referenceContainer>
    </body>
</page>
