<?xml version="1.0"?>
<!--
/**
 * SealMetrics Tracking Module for Magento 2
 * Product View Layout - Fires product_view event
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="SealMetrics\Tracking\Block\ProductView"
                   name="sealmetrics.tracking.product"
                   template="SealMetrics_Tracking::tracking/product_view.phtml"
                   after="sealmetrics.tracking.init"/>
        </referenceContainer>
    </body>
</page>
